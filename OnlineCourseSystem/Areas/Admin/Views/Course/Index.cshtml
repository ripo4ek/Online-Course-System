@model IEnumerable<OnlineCourseSystem.Domain.Model.Course>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
    <div class="container-fluid">
        <div class="row">
            <div class="table-title">
                List of courses
            </div>
            <table id="customers" class="table table-bordered table-hover table-custom">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Author</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                @foreach (var e in Model)
                {
                    <tr>
                        <td>@e.Id</td>
                        <td>@e.Name</td>
                        @if (e.Author.Name == null || e.Author.Surname == null)
                        {
                            <td>@e.Author.UserName</td>
                        }
                        else
                        {
                            <td>@e.Author.UserName (@e.Author.Name @e.Author.Surname)</td>
                        }               
                        <td><a asp-action="Details" asp-controller="Course" asp-route-id="@e.Id">Details</a></td>
                        <td><a asp-action="Delete" asp-controller="Course" asp-route-id="@e.Id">Delete</a></td>
                    </tr>
                }

            </table>
        </div>
    </div>