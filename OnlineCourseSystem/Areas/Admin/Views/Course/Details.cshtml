@model  OnlineCourseSystem.Domain.Model.Course
@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
    <div class="container">
        <div class="details">
            <div class="details-header">
                Course Details
            </div>


            <div class="details-content">
                
                
                <div class="details-content-row">
                    Name: <span class="details-info">@Model.Name</span>
                </div>

                <div class="details-content-row">
                    Id: <span class="details-info">@Model.Id</span>
                </div>

                <div class="details-content-row">
                    Description: <span class="details-info">@Model.Description</span>
                </div>

                <div class="details-content-row">
                    Curriculum Description: <span class="details-info">@Model.CurriculumDescription</span>
                </div>
                <form asp-action="Index" asp-controller="Course">
                    <button class="home_search_button details-button">BACK</button>
                </form>
            </div>


        </div>


    </div>

