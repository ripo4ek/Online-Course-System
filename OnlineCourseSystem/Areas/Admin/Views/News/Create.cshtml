
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <div class="create-wrap">
        <div class="create-section">
            <h3 class="create-name-title">Post your news</h3>
            <div class="create-box">
                <div class="create-name-subtitle">News title:</div>
                <input class="create-section-input" type="text" name="name" value="" />
            </div>
            <div class="create-box">
                <div class="create-name-subtitle">Upload main image:</div>
                <div class="file-input-wrapper">
                    <button class="btn-file-input counter_form_button upload-button">Choose a picture</button>
                    <input class="create-section-input" type="file" name="name" value="" />
                </div>

            </div>
            <div class="create-text">
                <textarea class="create-text-input" placeholder="Enter your text here"></textarea>
            </div>
            <button class="home_search_button create-button">Create</button>
        </div>
    </div>




</div>

