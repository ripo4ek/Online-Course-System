@model  IEnumerable<OnlineCourseSystem.Domain.Model.ApplicationUser>
@{
    ViewData["Title"] = "Users";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="table-title">
            List of Authors
        </div>
        <table id="customers" class="table table-bordered table-hover table-custom">
            <thead>
                <tr>
                    <th>UserName</th>
                    <th>E-mail confirmed</th>
                    <th>Details</th>
                    <th>Delete</th>
                </tr>
            </thead>
                
                @foreach (var e in Model)
                {
                    <tr>
                        <td>@e.UserName</td>
                        <td>@(e.EmailConfirmed?"Yes":"No")</td>
                        <td><a asp-action="Details" asp-controller="Author" asp-route-id="@e.Id">Details</a></td>
                        <td><a asp-action="Delete" asp-controller="Author" asp-route-id="@e.Id">Delete</a></td>
                    </tr>
                }

        </table>
    </div>
</div>
