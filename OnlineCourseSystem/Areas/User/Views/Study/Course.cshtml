@model  OnlineCourseSystem.Domain.Model.Course
@{
    ViewData["Title"] = "Course";
    Layout = "~/Areas/User/Views/Shared/_LayoutMain.cshtml";
}

<div class="home">
    <div class="breadcrumbs_container">
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="breadcrumbs">
                        <ul>
                            <li><!--<a href="index.html">Home</a>--></li>
                            <li><!--<a href="courses.html">Courses</a>--></li>
                            <li>Course Details</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<nav class="pushy pushy-left">
    <div class="menu-label">
        <h2 class="course-name">@Model.Name</h2>
    </div>
    <div class="pushy-content">
        <ul>
            <!-- Submenu -->
            @await Component.InvokeAsync("Sections", new {idOfCourse = Model.Id})
        </ul>
    </div>
</nav>
<!-- Course -->
<div class="site-overlay"></div>
<div class="course">
    <div class="container">
        <div class="row">

            <!-- Course -->
            <div class="col-lg-12">

                <div class="course_container">
                    <button class="menu-btn">&#9776; Menu</button>
                    <div class="course_info d-flex flex-lg-row flex-column align-items-lg-center align-items-start justify-content-start">

                        <div id="course-content"></div>
                        @await Component.InvokeAsync("CourseInformationShower", new {courseId =1,  topicId=1})
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/jquery-3.2.1.min.js"></script>
<script src="~/js/pushy.min.js"></script>
<script src="~/styles/bootstrap4/popper.js"></script>
<script src="~/styles/bootstrap4/bootstrap.min.js"></script>
<script src="~/plugins/OwlCarousel2-2.2.1/owl.carousel.js"></script>
<script src="~/plugins/easing/easing.js"></script>
<script src="~/plugins/parallax-js-master/parallax.min.js"></script>
<script src="~/plugins/colorbox/jquery.colorbox-min.js"></script>
<script src="~/js/course.js"></script>

<script>



    function showTextEditor() {
        // Find the div to put it in
        var container = $("#text-editor-container");
        $.get("text-editor", function (data) { container.html(data); });
    }
</script>