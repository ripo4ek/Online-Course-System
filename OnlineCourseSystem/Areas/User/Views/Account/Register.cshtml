@model OnlineCourseSystem.Areas.User.Models.RegisterUserViewModel

@{
    ViewBag.Title = "Register";
    Layout = "_LayoutMain";
}

@section Links {
    <link rel="stylesheet" type="text/css" href="~/styles/login-form.css">
}


<section id="form">
    <!--form-->
    <div class="row">
        <div class="col-sm-3 col-sm-offset-1 login-form-center">
            <div class="login-form">
                <!--sign up form-->
                <div class="login-title">Sign Up</div>
                <small class="required-field">* - required field</small>
                <form asp-action="Register" asp-antiforgery="true">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <label for="UserName">
                        Username <span class="required-field">*</span>
                    </label>
                    <input id="UserName" class="login-form-input" asp-for="UserName" placeholder="@nameof(Model.UserName)" />
                    <label for="UserLastname">
                        Username
                    </label>
                    <input id="UserLastname" class="login-form-input" placeholder="UserLastName" />
                    <label for="Email">
                        E-mail
                    </label>
                    <input id="Email" class="login-form-input" asp-for="Email" placeholder="@nameof(Model.Email)" />
                    <label for="Password">
                        Password <span class="required-field">*</span>
                    </label>
                    <input id="Password" class="login-form-input" asp-for="Password" placeholder="@nameof(Model.Password)" />

                    <label for="ConfirmPassword">
                        Confirm password <span class="required-field">*</span>
                    </label>

                    <input id="ConfirmPassword" class="login-form-input" asp-for="ConfirmPassword" placeholder="@nameof(Model.ConfirmPassword)" />

                    <button type="submit" class="btn btn-default btn-custom">Sign up</button>
                </form>

            </div><!--/sign up form-->
        </div>
    </div>
</section>

