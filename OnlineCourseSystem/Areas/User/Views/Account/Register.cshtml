@model OnlineCourseSystem.Areas.User.Models.RegisterUserViewModel

@{
    ViewBag.Title = "Register";
    Layout = "_LayoutMain";
}

<section id="form">
    <!--form-->
    <div class="row">
        <div class="col-sm-3 col-sm-offset-1 login-form-center">
            <div class="login-form">
                <!--sign up form-->
                <div class="login-title">Регистрация пользователя</div>
                <form asp-action="Register" asp-antiforgery="true">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <label for="UserName">
                      Username
                    </label>
                    <input id="UserName" class="login-form-input" asp-for="UserName" placeholder="@nameof(Model.UserName)" />
                    <label for="Password">
                        Password
                    </label>
                    <input id="Password" class="login-form-input" asp-for="Password" placeholder="@nameof(Model.Password)" />
                    <label for="ConfirmPassword">
                        Confirm password
                    </label>
                    <input id="ConfirmPassword" class="login-form-input" asp-for="ConfirmPassword" placeholder="@nameof(Model.ConfirmPassword)" />
                    <button type="submit" class="btn btn-default btn-custom">Sign up</button>
                </form>
            </div><!--/sign up form-->
        </div>
    </div>
</section>

