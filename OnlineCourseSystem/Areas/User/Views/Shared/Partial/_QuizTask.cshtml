
@model OnlineCourseSystem.Domain.Model.Tasks.QuizTask


<div class="question-wrap">
    <div>
        <h2 class="quiz-title">@Model.Question</h2>
    </div>
    <form class="form-quiz" name="quiz" action="" method="post">
        
        
        @foreach (var variant in Model.VariantOfAnswers)
        {
            <div class="quiz-option">
                <input type="radio" name="quiz_var" value="Yes" checked="checked"/> @variant.Text<br/>
            </div>
        }
        <button class="counter_form_button question-button question-button-send">Send answer</button>
    </form>

<div class="nav-buttons">
    <button class="counter_form_button question-button">Back</button>
    <button class="counter_form_button question-button">Next</button>
</div>
</div>